# Healthcare CMS Environment Configuration
# Copy this file to .env and fill in your actual values

# Application Settings
APP_NAME=Tamamlayıcı Sağlık CMS
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_TIMEZONE=Europe/Istanbul

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=tamamlayici_saglik_cms
DB_USERNAME=root
DB_PASSWORD=

# Cache Configuration
CACHE_DRIVER=file
CACHE_TTL=3600

# Session Configuration
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Authentication
AUTH_DRIVER=session
AUTH_GUARD=web
PASSWORD_RESET_TOKEN_EXPIRY=60

# Email Configuration
MAIL_DRIVER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=465
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM_ADDRESS=noreply@tamamlayici-saglik.com
MAIL_FROM_NAME=Tamamlayıcı Sağlık CMS

# Healthcare-Specific Configuration
# Patient Management
PATIENT_ID_PREFIX=PAT
ENABLE_PATIENT_PORTAL=true

# Appointment System
APPOINTMENT_REMINDER_HOURS=24
APPOINTMENT_CANCELLATION_HOURS=2

# Medical Records
ENABLE_DIGITAL_RECORDS=true
RECORD_ENCRYPTION=true
HIPAA_COMPLIANCE=true

# Prescription Management
PRESCRIPTION_VALIDITY_DAYS=90
ENABLE_E_PRESCRIPTION=true

# Billing & Payment
PAYMENT_GATEWAY=stripe
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
CURRENCY=TRY

# Notifications
NOTIFICATION_CHANNELS=email,sms,push
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# File Upload
UPLOAD_DRIVER=local
MAX_UPLOAD_SIZE_MB=50
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,doc,docx

# Security
JWT_SECRET=
ENCRYPTION_KEY=

# Third-party Integrations
GOOGLE_CALENDAR_API_KEY=
GOOGLE_MAPS_API_KEY=

# Logging
LOG_CHANNEL=single
LOG_LEVEL=debug

# Debug Mode (Disable in production)
QUERY_LOG=false
